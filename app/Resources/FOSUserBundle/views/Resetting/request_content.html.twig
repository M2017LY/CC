{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <div class="form-signin box-shadow-2">
        <h1 class="form-signin-heading">Reset Password</h1>
        <div class="form-group">

        <label for="username">{{ 'resetting.request.username'|trans }}</label>
        <input type="text" id="username" name="username" required="required" class="form-control" placeholder="Username/Email address" />
    </div>
        <div class="form-group">
        <input type="submit" value="{{ 'resetting.request.submit'|trans }}" class="btn btn-lg btn-primary btn-block"/>
    </div>
    </div>
    </div>
</form>
