{% trans_default_domain 'FOSUserBundle' %}

<div class="form-signin box-shadow-2">
<h2>Update Username</h2>

{{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
    {{ form_widget(form) }}

    <div>
        <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-lg btn-primary btn-block"/>
    </div>
{{ form_end(form) }}
</div>


<script>
    $( function() {
            $('#fos_user_profile_form_email').addClass('hidden');
            $("label[for='fos_user_profile_form_email']").addClass('hidden');
    });
</script>
